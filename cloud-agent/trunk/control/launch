#!/usr/bin/env python

# Fetching the cloud provider security cridentials
import sys
RACKSPACE_USER = sys.argv[ 1 ]
RACKSPACE_KEY = sys.argv[ 2 ]
a_container_name = sys.argv[ 3 ]

# Creating corresponding cloudfile container
import cloudfiles
a_cloudfiles_conn = cloudfiles.get_connection( RACKSPACE_USER, RACKSPACE_KEY, timeout = 500 )
a_cloudfiles_container = a_cloudfiles_conn.create_container[ a_container_name ]

for anId in range( 16 ) :
    an_archive_name = 'output-%d.txt' % anId
    a_file_object = a_cloudfiles_container.create_object( an_archive_name )
    a_file_object.write( 'Just something different - %d\n' % anId )
    pass
